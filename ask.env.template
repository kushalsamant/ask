# =============================================================================
# ASK: Advanced Research Tool - Comprehensive Configuration Template
# =============================================================================
#
# This template provides ALL necessary configuration variables for the ASK research tool.
# It includes settings for API integration, AI models, image generation, performance
# optimization, and advanced features like CPU/GPU generation and theme management.
#
# USAGE INSTRUCTIONS:
# 1. Copy this file to 'ask.env' in your project directory
# 2. Replace 'your_api_key_here' with your actual Together.ai API key
# 3. Customize other values based on your requirements and hardware capabilities
# 4. Ensure all required variables are properly configured before running the tool
#
# HARDWARE REQUIREMENTS:
# - CPU: Multi-core processor recommended for local image generation
# - GPU: NVIDIA GPU with CUDA support for accelerated generation (optional)
# - RAM: 8GB minimum, 16GB recommended for optimal performance
# - Storage: 2GB free space for models and generated content
#
# =============================================================================

# API CONFIGURATION
# ===================
# Configure API endpoints, authentication, and connection settings for external AI services
# ===================

TOGETHER_API_KEY=your_api_key_here # Your Together.ai API key (required for all API calls)
TOGETHER_API_BASE=https://api.together.xyz/v1 # Together.ai API endpoint
GROQ_API_BASE=https://api.groq.com/openai/v1 # Alternative API endpoint (optional)
API_TIMEOUT=60 # Request timeout in seconds (30-120 recommended)
RATE_LIMIT_DELAY=10.0 # Delay between API requests to avoid rate limiting
API_MAX_RETRIES=5 # Maximum retry attempts for failed API calls
API_RETRY_DELAY=30 # Base delay between retry attempts in seconds
API_EXPONENTIAL_BACKOFF=false # Enable exponential backoff for retries
DOWNLOAD_TIMEOUT=30 # Timeout for model downloads in seconds
MAX_RETRIES=5 # General maximum retry attempts
RETRYABLE_STATUS_CODES=408,429,500,502,503,504 # HTTP status codes that trigger retries
RETRY_DELAY_MULTIPLIER=30 # Multiplier for retry delay calculations

# AI MODEL CONFIGURATION
# ========================
# Specify AI models for text generation, image creation, and vision processing tasks
# ========================

TEXT_MODEL=llama-3.3-70b-instruct-turbo-free # Model for text generation (free tier recommended)
IMAGE_MODEL=flux.1-schnell-free # Model for image generation (free tier recommended)
VISION_MODEL=llama-vision-free # Model for image analysis and vision tasks

# TEXT GENERATION CONFIGURATION
# ===============================
# Control text generation parameters, creativity levels, and output quality settings
# ===============================

TEXT_TEMPERATURE=0.72 # Creativity level for text generation (0.0-2.0, higher = more creative)
TEXT_MAX_TOKENS=150 # Maximum tokens per text generation response
TEXT_TOP_P=0.85 # Nucleus sampling parameter for text diversity (0.0-1.0)
TEXT_FREQUENCY_PENALTY=0.3 # Penalty for frequent token usage (-2.0 to 2.0)
TEXT_PRESENCE_PENALTY=0.6 # Penalty for new token introduction (-2.0 to 2.0)

# IMAGE GENERATION CONFIGURATION
# ================================
# Configure image generation settings, dimensions, quality, and style parameters
# ================================

IMAGE_WIDTH=1072 # Generated image width in pixels (256-2048, powers of 2 recommended)
IMAGE_HEIGHT=1792 # Generated image height in pixels (256-2048, powers of 2 recommended)
IMAGE_TEXT_AREA_START_Y=80 # Text area start Y position in pixels
IMAGE_TEXT_AREA_END_Y=400 # Text area end Y position in pixels
IMAGE_BRAND_TEXT=ASK: Daily Research # Brand text for image overlays
IMAGE_QUALITY=95 # Image quality percentage (1-100, higher = better quality)
IMAGE_STYLE=photographic # Default image style (photographic for real-life objects, artistic, abstract, etc.)
IMAGE_ASPECT_RATIO=9:16 # Default aspect ratio for generated images
INFERENCE_STEPS=4 # Number of inference steps (4-50, higher = better quality but slower)
GUIDANCE_SCALE=7.5 # Guidance scale for image generation (1.0-20.0, higher = more prompt adherence)

# CPU/GPU GENERATION CONFIGURATION
# ==================================
# Configure local CPU and GPU-based image generation for offline operation
# ==================================

CPU_IMAGE_GENERATION_ENABLED=true # Enable CPU-based image generation (first fallback, offline)
GPU_IMAGE_GENERATION_ENABLED=true # Enable GPU-based image generation (primary mode, requires CUDA)
API_IMAGE_GENERATION_ENABLED=false # Enable API-based image generation (last resort, requires internet)
CPU_MODEL_ID=SimianLuo/LCM_Dreamshaper_v7 # CPU model for image generation (lightweight, fast)
GPU_MODEL_ID=runwayml/stable-diffusion-v1-5 # GPU model for image generation (high quality, requires CUDA)
PARALLEL_PROCESSING=true # Enable parallel processing for multiple image generations
BATCH_SIZE=2 # Number of images to process in parallel (adjust based on hardware)
CACHE_ENABLED=true # Enable caching for generated images and models
CACHE_TTL=3600 # Cache time-to-live in seconds (1 hour default)

# PERFORMANCE OPTIMIZATION
# ==========================
# Configure performance settings, logging, and system resource management
# ==========================

LOG_LEVEL=INFO # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
ENABLE_METRICS=true # Enable performance metrics collection
METRICS_INTERVAL=60 # Metrics collection interval in seconds
ERROR_RETRY_ATTEMPTS=3 # Number of retry attempts for recoverable errors
ERROR_RETRY_DELAY=5 # Delay between error retry attempts in seconds
IMAGE_QUALITY_THRESHOLD=0.7 # Minimum quality threshold for generated images (0.0-1.0)
TEXT_QUALITY_THRESHOLD=0.8 # Minimum quality threshold for generated text (0.0-1.0)

